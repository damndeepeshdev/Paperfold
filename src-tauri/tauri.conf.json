{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Paperfold",
  "version": "0.1.6",
  "identifier": "com.damndeepesh.paperfold",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Paperfold",
        "width": 800,
        "height": 600,
        "resizable": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "paperfold-daemon"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/damndeepeshdev/Paperfold/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0OTA2NzdEQTI1NjdBRDAKUldUUWVsYWlmV2VRUklFRzg5WVp5WkQzaXJPVEc1dUd0aWh3QzhiTUF4QlJraWRqMzFKTGN2VVgK"
    }
  }
}